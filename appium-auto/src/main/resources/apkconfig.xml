<?xml version="1.0" encoding="UTF-8"?>

<!--- Sample Configuration of framework -->
<account user="user"> <!--- user - Set as current user logged in as-->
    <os value="android"/> <!--- os - os type to -->
    <apppath value="/home/user/workspace/resources/apk/app-debug.apk"/> <!-- Location of the apk or ipa file to test on-->
    <!-- These are necessary sole Android values will not be validated if os = "ios" -->
    <apppackage value="com.company"/> <!-- Name of the app package -->
    <appactivity value="com.company.MainActivity"/> <!-- Name of the Android Activity that launches as first screen -->
    <appwaitactivity value="com.company.MainActivity"/> <!--  Name of the Android Activity to wait for before starting the test -->
</account>